{
  "extends": ["standard"],
  "env": {
    "browser": false,
    "node": true,
    "jest": true,
    "mocha": true
  },
  "globals" : {
    "artifacts": false,
    "contract": false,
    "assert": false,
    "web3": false
  },
  "rules": {
    "comma-dangle": "off",
    "indent": ["error", 2, {"SwitchCase": 1 }],
    "prefer-promise-reject-errors": 0,
    "quotes": ["warn", "single"],
    "semi": "off",
    "import/export": 0,
    "no-useless-constructor": 1,
    "handle-callback-err": 1,
    "max-len" : ["error", { "code": 120 }]
  }
}
